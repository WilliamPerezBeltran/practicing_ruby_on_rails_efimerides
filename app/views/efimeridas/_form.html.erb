<%= form_with(model: efimerida, local: true) do |form| %>
  <% if efimerida.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(efimerida.errors.count, "error") %> prohibited this efimerida from being saved:</h2>

      <ul>
      <% efimerida.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_field :text, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, { :prompt => {day: 'Day', month: 'Month', year: 'Year'}}, class: 'form-control date-select col-md-4'  %>

  </div>




  <div class="form-group">
    <%= form.label :efimerida %>
    <%= select("efimerida", "category_id", Category.all.collect {|p| [ p.name, p.id ] }, {prompt: 'Seleccione la categoria', selected: '', disabled: ''}, class: "form-control")%>
  </div>


  <div class="form-group">
    <%= form.label :imagen %>
    <%= form.file_field :attachment %>
    
  </div>



  <div class="actions">
    <%= form.submit 'crear efimerida', class: 'btn btn-primary' %>
  </div>
<% end %>
